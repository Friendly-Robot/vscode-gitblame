{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2019",
        "strict": true,
        "outDir": "./dist",
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "es2019"
